<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="icon" href=".\public\images\favicon.ico" type="image/x-icon">
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Fix your grammar Retard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <style>
      .icon-large {
        font-size: 3rem;
        margin-bottom: 1rem;
      }
      .output-text {
        background-color: #f8f9fa;
        border-radius: 0.375rem;
        padding: 1rem;
        min-height: 200px;
        white-space: pre-wrap;
      }
      .corrected-text {
        color: #198754;
        font-weight: 500;
        line-height: 1.6;
      }
      .placeholder-text {
        color: #6c757d;
        font-style: italic;
      }
      .error-alert {
        border-left: 4px solid #dc3545;
      }
      .info-alert {
        border-left: 4px solid #0dcaf0;
      }
      .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border: 1px solid rgba(0, 0, 0, 0.125);
      }
      .card:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        transition: all 0.3s ease;
      }
      .btn-primary {
        background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%);
        border: none;
      }
      .btn-primary:hover {
        background: linear-gradient(135deg, #0a58ca 0%, #084298 100%);
        transform: translateY(-1px);
      }
    </style>
  </head>
  <body class="bg-light">
    <div class="container mt-4">
      <!-- Header -->
      <div class="text-center mb-5">
        <i class="fas fa-robot icon-large text-primary"></i>
        <h1 class="display-5 fw-bold text-primary">Fix your Grammar you Retard </h1>
        <p class="lead text-muted">
          Free AI-powered grammar and spell checking
        </p>
      </div>

      <!-- Error Messages -->
      <% if (error) { %>
        <div class="alert alert-warning alert-dismissible fade show error-alert" role="alert">
          <i class="fas fa-exclamation-triangle me-2"></i>
          <strong>Note:</strong> <%= error %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% } %>

      <div class="row">
        <!-- Input Card -->
        <div class="col-md-6 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h2 class="card-title text-primary">
                <i class="fas fa-keyboard me-2"></i>Input Your Text
              </h2>
              <p class="card-text text-muted">
                Enter your text below and get instant AI-powered corrections.
              </p>
              <form action="/correct" method="POST">
                <div class="mb-3">
                  <textarea
                    class="form-control"
                    id="text"
                    name="text"
                    rows="6"
                    required
                    placeholder="Type or paste your text here... Example: i goes to the store and buyed some apples"
                  ><%= originalText %></textarea>
                  <div class="form-text">
                    Character count: <span id="charCount">0</span>/5000
                  </div>
                </div>
                <button type="submit" class="btn btn-primary btn-lg w-100">
                  <i class="fas fa-magic me-2"></i>Enhance with AI
                </button>
              </form>
            </div>
          </div>
        </div>

        <!-- Output Card -->
        <div class="col-md-6 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h2 class="card-title text-success">
                <i class="fas fa-check-circle me-2"></i>
                AI-Corrected Output
              </h2>
              <p class="card-text text-muted">
                Your grammatically improved text appears here.
              </p>
              <div class="output-text">
                <% if (hasResult) { %>
                  <% if (corrected && corrected !== originalText) { %>
                    <div class="corrected-text">
                      <strong>Corrected Version:</strong>
                      <div class="mt-2 p-3 bg-white rounded border">
                        <%= corrected %>
                      </div>
                    </div>
                  <% } else { %>
                    <div class="alert alert-success">
                      <i class="fas fa-check me-2"></i>
                      Your text looks great! No corrections needed.
                    </div>
                  <% } %>
                <% } else { %>
                  <p class="placeholder-text">
                    <i class="fas fa-arrow-left me-2"></i>
                    Enter text on the left and click "Enhance with AI" to see corrections.
                  </p>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Features -->
      <div class="row mt-5">
        <div class="col-12 text-center mb-4">
          <h3 class="text-primary">Why Use Our Grammar Checker?</h3>
        </div>
        <div class="col-md-4 text-center mb-3">
          <div class="card h-100 border-0 bg-transparent">
            <div class="card-body">
              <i class="fas fa-bolt icon-large text-warning"></i>
              <h4>Lightning Fast</h4>
              <p class="text-muted">
                Get instant grammar corrections powered by LanguageTool's AI algorithms.
              </p>
            </div>
          </div>
        </div>
        <div class="col-md-4 text-center mb-3">
          <div class="card h-100 border-0 bg-transparent">
            <div class="card-body">
              <i class="fas fa-brain icon-large text-info"></i>
              <h4>Intelligent Analysis</h4>
              <p class="text-muted">
                Advanced AI understands context and nuance for accurate corrections.
              </p>
            </div>
          </div>
        </div>
        <div class="col-md-4 text-center mb-3">
          <div class="card h-100 border-0 bg-transparent">
            <div class="card-body">
              <i class="fas fa-lock-open icon-large text-success"></i>
              <h4>Completely Free</h4>
              <p class="text-muted">
                No subscriptions, no credit cards, no limits for personal use.
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Footer -->
      <div class="text-center mt-5 pt-4 border-top">
        <p class="text-muted">
          <small>
            Powered by an <a href="https://www.instagram.com/aniderw/#" target="_blank">Infamous Rockstar</a> â€¢ 
            Built by blasting Hard Rock blasting all night
          </small>
        </p>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Character Counter -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const textarea = document.getElementById('text');
        const charCount = document.getElementById('charCount');
        
        if (textarea && charCount) {
          // Update count on load
          charCount.textContent = textarea.value.length;
          
          // Update count on input
          textarea.addEventListener('input', function() {
            charCount.textContent = this.value.length;
            
            // Warning for long text
            if (this.value.length > 4500) {
              charCount.className = 'text-warning fw-bold';
            } else if (this.value.length > 4000) {
              charCount.className = 'text-warning';
            } else {
              charCount.className = 'text-muted';
            }
          });
        }
      });
    </script>
  </body>
</html>